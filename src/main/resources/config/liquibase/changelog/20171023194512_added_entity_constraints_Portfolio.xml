<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd">
    <!--
        Added the constraints for entity Portfolio.
    -->
    <changeSet id="20171023194512-2" author="jhipster">
        
        <addForeignKeyConstraint baseColumnNames="account_id"
                                 baseTableName="portfolio"
                                 constraintName="fk_portfolio_account_id"
                                 referencedColumnNames="id"
                                 referencedTableName="accounts"/>

        <addForeignKeyConstraint baseColumnNames="portfolios_id"
                                 baseTableName="portfolio_assets"
                                 constraintName="fk_portfolio_assets_portfolios_id"
                                 referencedColumnNames="id"
                                 referencedTableName="portfolio"/>
        <addForeignKeyConstraint baseColumnNames="assets_id"
                                 baseTableName="portfolio_assets"
                                 constraintName="fk_portfolio_assets_assets_id"
                                 referencedColumnNames="id"
                                 referencedTableName="asset"/>
        
        <addForeignKeyConstraint baseColumnNames="portfolios_id"
                                 baseTableName="portfolio_institutions"
                                 constraintName="fk_portfolio_institutions_portfolios_id"
                                 referencedColumnNames="id"
                                 referencedTableName="portfolio"/>
        <addForeignKeyConstraint baseColumnNames="institutions_id"
                                 baseTableName="portfolio_institutions"
                                 constraintName="fk_portfolio_institutions_institutions_id"
                                 referencedColumnNames="id"
                                 referencedTableName="institution"/>
        
    </changeSet>
</databaseChangeLog>
